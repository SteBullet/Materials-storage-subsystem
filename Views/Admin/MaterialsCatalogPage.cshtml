@model IEnumerable<Materials_storage_subsystem.Models.Material>

@{
    ViewData["Title"] = "MaterialsCatalogPage";
    Layout = "_LayoutAdmin";
}

<h1>MaterialsCatalogPage</h1>

<p>
    <a asp-action="MaterialCreatePage">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Volume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Weight)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Volume)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Weight)
            </td>
            <td>
                <a asp-action="MaterialEditPage" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="MaterialDetailsPage" asp-route-id="@item.Id">Details</a> |
                <a asp-action="MaterialDelete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
