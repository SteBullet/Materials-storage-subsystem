@model ExpenseSheetModel

@{
    ViewData["Title"] = "ExpenseSheetCreate";
}

<h1>ExpenseSheetCreate</h1>

<h4>ExpenseSheet</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ExpenseSheetCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ExpenseSheet.Date" class="control-label"></label>
                <input asp-for="ExpenseSheet.Date" class="form-control" />
                <span asp-validation-for="ExpenseSheet.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpenseSheet.WarehouseId" class="control-label"></label>
                <select asp-for="ExpenseSheet.WarehouseId" class ="form-control">
                    @foreach (var id in Model.WarehousesId)
            {
                <option value="@id">@id</option>
            }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
