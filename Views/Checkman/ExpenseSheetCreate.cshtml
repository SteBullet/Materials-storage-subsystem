@model ExpenseSheet

@{
    ViewData["Title"] = "ExpenseSheetCreate";
    Layout = "_LayoutCheckman";
}

<h1>ExpenseSheetCreate</h1>

<h4>ExpenseSheet</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ExpenseSheetCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Date" class="control-label"></label>
                <input asp-for="@Model.Date" class="form-control" />
                <span asp-validation-for="@Model.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Warehouse</label>
                <input type="hidden" asp-for="@Model.WarehouseId" class="form-control" />
                <label>@Model.WarehouseId</label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ExpenseSheetList">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
